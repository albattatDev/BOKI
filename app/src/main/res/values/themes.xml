<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BOKI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
         <item name="colorPrimary">@color/BOKI_MainPurple</item>
         <item name="colorPrimaryVariant">@color/BOKI_MainPurple</item>
    </style>

    <style name="Theme.BOKI" parent="Base.Theme.BOKI" />


    <!-- Circla shape for FAB -->
    <style name="ShapeAppearance.App.Circle" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- font for BottomNav -->
    <style name="BottomNavTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textSize">12sp</item> <!-- Optional: Adjust text size if needed -->
    </style>



    <!-- Add this style for the active indicator -->
    <style name="App.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/BOKI_MainPurple</item>
    </style>

    <!--  Style for the Datepicker Dialogs  -->
    <style name="DialogTheme" parent="Theme.Material3.DayNight.Dialog">
        <!-- ===== HEADER and SELECTION COLOR ===== -->
        <item name="colorAccent">@color/BOKI_MainPurple</item>
        <!-- ===== BACKGROUND COLOR ===== -->
        <item name="android:windowBackground">@color/BOKI_MidPurple</item>
        <!-- ===== TEXT COLOR ===== -->
        <!-- This is the main fix. It controls the color of the calendar day numbers and the header date -->
        <item name="colorOnSurface">@color/BOKI_TextPrimary</item>
        <item name="colorOnSurfaceVariant">@color/BOKI_TextPrimary</item>
        <item name="android:textColorPrimary">@color/BOKI_TextPrimary</item>
        <item name="android:textColorSecondary">@color/BOKI_TextSecondary</item>


        <!-- This controls the color of the "OK" and "CANCEL" buttons -->
        <item name="colorOnPrimaryContainer">@color/BOKI_MainPurple</item>
    </style>

    <!--  Style for the Datepicker Dialogs  -->
    <style name="timepukerTheme" parent="Theme.Material3.DayNight.Dialog">
        <!-- ===== HEADER and SELECTION COLOR ===== -->
        <item name="colorAccent">@color/BOKI_MainPurple</item>
        <!-- ===== BACKGROUND COLOR ===== -->
        <item name="android:windowBackground">@color/BOKI_MidPurple</item>
        <!-- ===== TEXT COLOR ===== -->
        <!-- This is the main fix. It controls the color of the calendar day numbers and the header date -->
        <item name="colorOnSurface">@color/BOKI_TextPrimary</item>
        <item name="colorOnSurfaceVariant">@color/BOKI_TextPrimary</item>
        <item name="cardCornerRadius">25dp</item>


        <!-- This controls the color of the "OK" and "CANCEL" buttons -->
        <item name="colorOnPrimaryContainer">@color/BOKI_MainPurple</item>
    </style>

    <!-- In res/values/themes.xml or styles.xml -->
    <!-- In res/values/themes.xml or styles.xml -->

    <style name="DayButton" parent="Widget.AppCompat.Button.Borderless">
        <!-- NOTE 3: CRITICAL - Make the button background transparent -->
        <item name="android:background">@android:color/transparent</item>

        <!-- NOTE 4: Set the font and text style -->
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <!-- Use a color selector to change text color on selection -->
        <item name="android:textColor">@color/BOKI_TextSecondary</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>

        <!-- NOTE 5: Add the dot drawable to the start of the text -->
        <!-- This drawable will be programmatically shown/hidden -->
        <item name="android:drawableStart">@drawable/dot_indicator</item>
        <item name="android:drawablePadding">8dp</item>

        <!-- Set the color of the drawable -->
        <item name="android:drawableTint">@color/BOKI_MainPurple</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/BOKI_MainPurple</item>
        <item name="android:textColorPrimary">@color/BOKI_TextPrimary</item>
        <item name="android:fontFamily">@font/cairo</item>
    </style>

</resources>