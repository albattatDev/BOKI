<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="12dp"
    app:cardCornerRadius="16dp"
    android:backgroundTint="@color/BOKI_Pink_Transparent"
    android:layout_marginBottom="16dp">

    <!-- NOTE 1: Switched from LinearLayout to RelativeLayout -->
    <!-- This allows us to align views to the parent edges. -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

        <!-- RIGHT SIDE: Category Icon -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/category_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@android:color/transparent"
            app:icon="@drawable/invoice"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="23dp"
            app:iconTint="@color/BOKI_Pink"
            />

        <!-- MIDDLE SECTION: Title and Date -->
        <!-- This layout is positioned to the left of the category icon -->
        <LinearLayout
            android:id="@+id/title_date_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/category_icon"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/percentage_title_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:textColor="@color/BOKI_Pink"
                android:textSize="16dp"
                android:layout_marginHorizontal="8dp"
                android:textStyle="bold"
                tools:text="%33.92" />

            <TextView
                android:id="@+id/operation_title_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:textColor="@color/BOKI_Pink"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:text="مطاعم" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
        </LinearLayout>


        <!-- LEFT SIDE: Amount and Type Icon -->
        <!-- NOTE 2: This whole section is aligned to the start of the parent -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/currency_symbol_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/riyal_symbol"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/amount_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/cairo"
                android:textColor="@color/BOKI_TextPrimary"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:text="264.00" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
