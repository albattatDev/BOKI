        <!-- PICK DATE AND TIME SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginVertical="16dp">

            <Button
                android:id="@+id/time_picker_btn"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="(am)HH:MM"
                android:fontFamily="@font/cairo"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/BOKI_MainPurple"
                android:padding="4dp"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/BOKI_TextPrimary_More_Transparent"
                />

            <Button
                android:id="@+id/date_picker_btn"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="DD-MM-YYYY"
                android:layout_marginHorizontal="4dp"
                android:fontFamily="@font/cairo"
                android:textStyle="bold"
                android:textColor="@color/BOKI_MainPurple"
                android:textSize="12dp"
                android:padding="4dp"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/BOKI_TextPrimary_More_Transparent"
                />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="4dp"
                android:src="@drawable/calendar_today"
                app:tint="@color/BOKI_MainPurple"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <!-- SAVE BUTTON SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/save_opration_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حفظ"
                android:fontFamily="@font/cairo"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="16dp"
                android:gravity="center"
                android:layout_gravity="center"
                app:cornerRadius="100dp"
                android:backgroundTint="@color/BOKI_MainPurple"
                />

        </LinearLayout>





    </LinearLayout>

