<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BudgetFragment"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/BOKI_DarkPurple">

    <!--Text Section-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="العمليات"
            android:textSize="24dp"
            android:textColor="@color/BOKI_TextPrimary"
            android:textStyle="bold"
            android:fontFamily="@font/cairo"/>
    </LinearLayout>

    <!--Recyclerview Section-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/expenses_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginVertical="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/expense_list_item"
        android:paddingBottom="110dp"
        android:clipToPadding="false"/>



</LinearLayout>